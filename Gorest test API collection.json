	"item": [
		{
			"name": "Create user",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('userName', pm.variables.replaceIn(`{{$randomFullName}}`));",
							"pm.environment.set('userEmail', pm.variables.replaceIn(`{{$randomEmail}}`));",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Gorest API allows to create a user', () => {",
							"    pm.expect(pm.response.code).to.eql(201);",
							"    const responseJson = pm.response.json();",
							"    pm.expect(responseJson.id).to.be.a('number');",
							"    pm.expect(responseJson.name).eql(pm.environment.get(\"userName\"));",
							"    pm.expect(responseJson.email).eql(pm.environment.get(\"userEmail\"));",
							"    pm.expect(responseJson.gender).eql('male')",
							"    pm.expect(responseJson.status).eql('active');",
							"",
							"    pm.environment.set('id', pm.variables.replaceIn(responseJson.id));",
							"})",
							"",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "{{token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"{{userName}}\",\n    \"gender\": \"male\",\n    \"email\": \"{{userEmail}}\",\n    \"status\": \"active\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://gorest.co.in/public/v2/users",
					"protocol": "https",
					"host": [
						"gorest",
						"co",
						"in"
					],
					"path": [
						"public",
						"v2",
						"users"
					]
				}
			},
			"response": []
		},
